<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="examples.mob.yenepay.com.checkoutcounter.ui.checkout.CheckoutActivity">
    <data>
        <variable
            name="callback"
            type="examples.mob.yenepay.com.checkoutcounter.ui.checkout.OnCheckoutActionListner"/>
        <variable
            name="viewModel"
            type="examples.mob.yenepay.com.checkoutcounter.viewmodels.CheckoutViewModel"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="Sales Checkout"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4"
            android:textColor="@color/colorPrimaryDark" />

        <include
            android:id="@+id/order_detail"
            layout="@layout/order_detail"
            app:order="@{viewModel.order}"
            app:callback="@{callback}"/>

    </LinearLayout>
</layout>
