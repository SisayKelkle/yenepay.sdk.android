<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".QRFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:orientation="vertical">

            <WebView
                android:id="@+id/qrwebView"
                android:layout_width="@dimen/small_qr_size"
                android:layout_height="@dimen/small_qr_size"
                android:layout_gravity="center">

            </WebView>

            <Button
                android:id="@+id/btn_connect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:text="Connect"
                android:visibility="gone" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/peers_list"
                android:name="examples.mob.yenepay.com.checkoutcounter.ItemListFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                app:layoutManager="android.support.v7.widget.GridLayoutManager"
                app:spanCount="3"
                tools:listitem="@layout/device_list_content" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>